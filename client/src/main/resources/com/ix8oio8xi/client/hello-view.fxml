<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="center">

  <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

  <HBox spacing="10" alignment="center">
    <Label text="Username:" />
    <TextField fx:id="usernameField" promptText="Enter your username" onAction="#enterLogin" />
  </HBox>

  <HBox spacing="10" alignment="center">
    <Label text="Password:" />
    <PasswordField fx:id="passwordField" promptText="Enter your password" onAction="#loginButtonClicked" />
  </HBox>

  <HBox spacing="10" alignment="center">
    <Button text="Login" onAction="#loginButtonClicked" />
  </HBox>

  <HBox spacing="10" alignment="center">
    <Label fx:id="errorLabel" style="-fx-font-size: 10px; -fx-font-style: italic; -fx-text-fill: red;" />
  </HBox>
</VBox>
